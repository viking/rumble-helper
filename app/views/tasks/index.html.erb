<%- if @tasks.empty? -%>
<p>
  There are no tasks!
</p>
<%- else -%>
<ul class="tasks">
<% @tasks.each do |task| %>
  <li class="<%= task.priority.downcase %>">
    <div><%=h task.name %></div>
  </li>
<% end %>
</table>
<br />
<%- end -%>
<div class="clear"></div>
<%= link_to 'New task', new_task_path %>
