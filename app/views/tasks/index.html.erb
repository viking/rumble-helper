<div class="grid_12">
  <h1>Tasks</h1>
  <div class="bubble">
    <%- if @tasks.empty? -%>
      Great!  Signup successful!  Now you can add some tasks that
      you want your team to accomplish.
    <%- end %>

    <ul class="tasks">
    <% @tasks.each do |task| %>
      <li class="<%= task.priority.downcase %>">
        <div><%=h task.name %></div>
      </li>
    <% end %>
    </table>
    <br />
    <div class="clear"></div>
    <%= link_to 'New task', new_task_path %>
  </div>
</div>
