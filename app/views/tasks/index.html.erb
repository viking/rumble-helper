<%- if @tasks.empty? -%>
<p>
  There are no tasks!
</p>
<%- else -%>
<table>
  <tr>
    <th>Name</th>
    <th>Priority</th>
    <th>Status</th>
    <th>Person</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.priority %></td>
    <td><%=h task.status %></td>
    <td><%=h task.person %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%- end -%>
<%= link_to 'New task', new_task_path %>
