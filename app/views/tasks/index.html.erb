<div class="prefix_2 grid_8 suffix_2">
  <h1>Tasks</h1>
  <div class="bubble">
    <%- if @tasks.empty? -%>
      No tasks yet!  I would <%= link_to 'create one', new_task_path %> if
      I were you.
    <%- else -%>
    <table class="list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Priority</th>
          <th>Status</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
      <%- @tasks.each do |task| -%>
        <tr<%= cycle("", " class='alt'") %>>
          <td><%=h task.name %></td>
          <td><%= task.priority %></td>
          <td><%= task.status.humanize %></td>
          <td><%= link_to(image_tag('edit.png'), edit_team_task_url(@team, task)) %></td>
          <td><%= link_to(image_tag('trash.png'), team_task_url(@team, task), :confirm => "Are you sure?", :method => :delete) %></td>
        </tr>
      <%- end %>
      </tbody>
    </table>
    <%= link_to 'New task', new_team_task_url(@team) %>
    <%- end -%>
  </div>
</div>
