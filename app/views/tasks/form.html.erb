<%- @subtitle = "#{@task.new_record? ? "New" : "Edit"} Task" -%>
<div class="prefix_3 grid_6 suffix_3">
  <h1><%= @task.new_record? ? "New" : "Edit" %> task</h1>
  <div class="bubble">
    <% form_for(@task) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name, :size => 20 %>
      </p>
      <p>
        <%= f.label :description %> (optional)<br />
        <%= f.text_area :description, :rows => 10 %>
      </p>
      <p>
        <%= f.label :priority %><br />
        <%= f.select :priority, Task::PRIORITIES %>
      </p>
      <%= f.submit %> or <%= link_to 'Cancel', session[:return_to] || tasks_path %>
    <% end %>
  </div>
</div>
