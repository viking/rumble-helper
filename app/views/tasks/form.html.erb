<div class="prefix_3 grid_6 suffix_3">
  <h1><%= @task.new_record? ? "New" : "Edit" %> task</h1>
  <div class="bubble">
    <% form_for(@task) do |f| %>
      <%= f.error_messages %>

      <div><%= f.label :name %></div>
      <%= f.text_field :name, :style => "width: 99%;" %>
      <br/>

      <p>
        <%= f.label :description %> (optional)<br />
        <%= f.text_area :description, :rows => 10, :style => "width: 99%;" %>
      </p>
      <p>
        <%= f.label :priority %><br />
        <%= f.select :priority, Task::PRIORITIES %>
      </p>
      <%- if @task.new_record? -%>
      <%= f.submit 'Save and continue' %> or just
      <%- end -%>
      <%= f.submit 'Save' %> or <%= link_to 'Go back', session[:return_to] || tasks_path %>
    <% end %>
  </div>
</div>
