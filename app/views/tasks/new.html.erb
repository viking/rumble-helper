<div class="grid_12">
  <h1><%= @task.new_record? ? "New" : "Edit" %> task</h1>
  <div class="bubble">
    <% form_for(@task) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :priority %><br />
        <%= f.select :priority, Task::PRIORITIES %>
      </p>
      <p>
        <%= f.label :status %><br />
        <%= f.select :status, Task::STATUSES %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>

  <%= link_to 'Back', tasks_path %>
</div>
