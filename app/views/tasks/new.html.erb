<%= javascript_include_tag 'jquery.autocomplete.min.js' %>
<%= stylesheet_link_tag 'jquery.autocomplete.css' %>

<h1>New task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.select :priority, Task::PRIORITIES %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, Task::STATUSES %>
  </p>
  <p>
    <%= f.label :person %><br />
    <%= f.text_field :person %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
<% javascript_tag do %>
  $('#task_person').autocomplete('<%= tasks_url %>/people');
<% end %>
