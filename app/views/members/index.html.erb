<div class="prefix_3 grid_6 suffix_3">
  <h1>Member Invitation Codes</h1>

  <div class="bubble">
    <table class="list">
      <tr>
        <th>Nickname</th>
        <th>Invitation Code</th>
      </tr>

    <% @members.each do |member| %>
      <tr<%= cycle("", ' class="alt"') %>>
        <td><%= member.nickname %></td>
        <td>
          <%- if member.user -%>
          <span class="strikethrough"><%= member.invitation_code %></span>
          <%- else -%>
          <%= member.invitation_code %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
